{% extends "index.twig" %}

{% block body %}
    <div class="container">
        <h1>{{ component }} List</h1>
        <table class="table table-striped table-bordered">
            {% for row in list %}
                {% if loop.first %}
                    <thead>
                        <tr>
                            {% for key, value in row.properties %}
                                <th>{{ key }}</th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                {% endif %}
                <tr>
                {% for value in row.properties %}
                    <td>{{ value }}</td>
                {% endfor %}
                </tr>
            {% else %}
                <tbody><tr><th>No {{ component }}s yet</th></tr></tbody>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
