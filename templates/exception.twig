{% extends "base.twig" %}

{% block title %}{{ parent() }} - {{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Exception: {{ title }}</h1>
        <h3>{{ message }}</h3>
        {% if xdebug_message|length > 0 %}
            <table>
                {{ xdebug_message|raw }}
            </table>
        {% else %}
            <pre class="loud">{{ exception }}
{% for line in exception.trace %}
    {{ loop.length - loop.index0 }}. {% if line.file|length > 0 %}{{ line.file }} [ {{ line.line }} ] - {% endif %}{{ line.class }}{{ line.type }}{{ line.function }}
{% endfor %}
</pre>
        {% endif %}
    </div>
{% endblock %}
